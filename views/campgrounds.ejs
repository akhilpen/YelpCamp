<% include partials/header%>


<div class="container">
    <div class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>Hand-picked campgrounds from all over the world</p>
            <p>
                 <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new campground</a>
            </p>
        </div>    
    </div>
    
   <div class="row">
        
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6" style="display:flex; flex-wrap:wrap;">
                <div class="thumbnail">
                    <img src="<%= campground.image%>">
                    <div class="caption">
                        <h4> <%=campground.name %> </h4>
                    </div>
                </div>
            </div>
        
        <% }); %>
   </div>
   
</div>

<% include partials/footer %>